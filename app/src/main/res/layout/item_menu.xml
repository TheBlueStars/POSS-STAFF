<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_card" android:padding="12dp"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tvName" android:text="Món"
        android:textColor="@color/text_primary" android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvPrice" android:text="80,000"
        android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <Button android:id="@+id/btnAdd" android:text="Thêm"
            android:layout_weight="1" android:textColor="@color/text_primary" android:background="@drawable/btn_red"
            android:layout_width="0dp" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnRemove" android:text="Hủy món"
            android:layout_marginStart="8dp" android:layout_weight="1"
            android:textColor="@color/text_primary" android:background="@drawable/btn_red"
            android:layout_width="0dp" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
